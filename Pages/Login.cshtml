@page
@model WebApplication1.Pages.LoginModel
@{
    ViewData["Title"] = "Sign In";
}

<div class="auth-container">
    <div class="auth-card">
        <div class="auth-header">
            <div class="auth-icon">
                <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" viewBox="0 0 16 16">
                    <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0z"/>
                    <path fill-rule="evenodd" d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8zm8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1z"/>
                </svg>
            </div>
            <h1>Welcome Back</h1>
            <p class="auth-subtitle">Sign in to your account to continue</p>
        </div>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success" role="alert">
                @TempData["SuccessMessage"]
            </div>
        }

        <form method="post" id="loginForm">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
            <input type="hidden" asp-for="RecaptchaToken" id="recaptchaToken" />

            <div class="form-floating mb-3">
                <input type="email" asp-for="LModel.Email" class="form-control" id="email" placeholder="name@example.com" />
                <label asp-for="LModel.Email">Email address</label>
                <span asp-validation-for="LModel.Email" class="text-danger small"></span>
            </div>

            <div class="form-floating mb-3">
                <input type="password" asp-for="LModel.Password" class="form-control" id="password" placeholder="Password" />
                <label asp-for="LModel.Password">Password</label>
                <span asp-validation-for="LModel.Password" class="text-danger small"></span>
            </div>

            <div class="form-check mb-4">
                <input asp-for="LModel.RememberMe" class="form-check-input" type="checkbox" id="rememberMe" />
                <label class="form-check-label" asp-for="LModel.RememberMe">
                    Remember me on this device
                </label>
            </div>

            <button type="submit" class="btn btn-primary btn-lg w-100 mb-3">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="me-2" viewBox="0 0 16 16">
                    <path fill-rule="evenodd" d="M10 3.5a.5.5 0 0 0-.5-.5h-8a.5.5 0 0 0-.5.5v9a.5.5 0 0 0 .5.5h8a.5.5 0 0 0 .5-.5v-2a.5.5 0 0 1 1 0v2A1.5 1.5 0 0 1 9.5 14h-8A1.5 1.5 0 0 1 0 12.5v-9A1.5 1.5 0 0 1 1.5 2h8A1.5 1.5 0 0 1 11 3.5v2a.5.5 0 0 1-1 0v-2z"/>
                    <path fill-rule="evenodd" d="M4.146 8.354a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L5.707 7.5H14.5a.5.5 0 0 1 0 1H5.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3z"/>
                </svg>
                Sign In
            </button>
        </form>

        <div class="auth-footer">
            <p><a asp-page="/ForgotPassword" class="link-secondary">Forgot your password?</a></p>
            <p>Don't have an account? <a asp-page="/Register" class="link-primary">Create one</a></p>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    @if (!string.IsNullOrEmpty(Model.RecaptchaSiteKey) && !Model.RecaptchaSiteKey.StartsWith("YOUR_"))
    {
        <script src="https://www.google.com/recaptcha/api.js?render=@Model.RecaptchaSiteKey"></script>
        <script>
            document.getElementById('loginForm').addEventListener('submit', function (e) {
                e.preventDefault();
                var form = this;
                grecaptcha.ready(function () {
                    grecaptcha.execute('@Model.RecaptchaSiteKey', { action: 'login' }).then(function (token) {
                        document.getElementById('recaptchaToken').value = token;
                        form.submit();
                    });
                });
            });
        </script>
    }
}
