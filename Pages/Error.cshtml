@page "{statusCode?}"
@model ErrorModel
@{
    ViewData["Title"] = Model.ErrorTitle;
}

<div class="error-container">
    <div class="error-card">
        <div class="error-code">@Model.StatusCode</div>
        <h2 class="mt-3 mb-2">@Model.ErrorTitle</h2>
        <p class="text-muted mb-4">@Model.ErrorMessage</p>

        <div class="d-flex justify-content-center gap-2 flex-wrap">
            <a asp-page="/Index" class="btn btn-primary">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="me-1" viewBox="0 0 16 16">
                    <path d="M8.354 1.146a.5.5 0 0 0-.708 0l-6 6A.5.5 0 0 0 1.5 7.5v7a.5.5 0 0 0 .5.5h4.5a.5.5 0 0 0 .5-.5v-4h2v4a.5.5 0 0 0 .5.5H14a.5.5 0 0 0 .5-.5v-7a.5.5 0 0 0-.146-.354L13 5.793V2.5a.5.5 0 0 0-.5-.5h-1a.5.5 0 0 0-.5.5v1.293L8.354 1.146zM2.5 14V7.707l5.5-5.5 5.5 5.5V14H10v-4a.5.5 0 0 0-.5-.5h-3a.5.5 0 0 0-.5.5v4H2.5z"/>
                </svg>
                Go Home
            </a>
            @if (Model.StatusCode == 401)
            {
                <a asp-page="/Login" class="btn btn-outline-primary">Sign In</a>
            }
        </div>

        @if (Model.ShowRequestId)
        {
            <p class="text-muted small mt-4 mb-0">
                Request ID: <code>@Model.RequestId</code>
            </p>
        }
    </div>
</div>
